<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
			<h4 class="modal-title">Fliter Search</h4>
		</div>
		<div class="modal-body">
		<form class="form-horizontal" id="filter-form">
			<div class="form-group">
				<label class="col-xs-4 control-label">Search Term<br>
					<a class="filter-reset" href="" {{action 'clearTerm'}}>clear</a>
				</label>
				<div class="col-xs-8">
					{{input type="search" classNames="form-control" value=searchTerm placeholder="Search..."}}
				</div>
			</div>
			<div class="form-group">
				<label class="col-xs-4 control-label">Country</label>
				<div class="col-xs-8">
					{{view Ember.Select content=countries classNames="form-control" value=selectedCountry}}
				</div>
			</div>
			<div class="form-group">
				<label class="col-xs-4 control-label">State</label>
				<div class="col-xs-8">
					{{view Ember.Select content=states classNames="form-control" value=selectedState}}
				</div>
			</div>
			<div class="form-group">
				<label class="col-xs-4 control-label">Neighborhood</label>
				<div class="col-xs-8">
					{{view Ember.Select content=neighborhoods classNames="form-control" value=neighborhood}}
				</div>
			</div>
			<div class="form-group">
				<label class="col-xs-4 control-label">Category<br>
					<a class="filter-reset" href="" {{action 'clearCategory'}}>clear</a>
				</label>
				<div class="col-xs-8">
					{{radio-group content=categories value=selectedCategory}}
				</div>
			</div>
		</form>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" {{action "resetAll"}}>Reset Filter</button>
			<button type="submit" form="filter-form" class="btn btn-primary" data-dismiss="modal" autofocus="true">Apply</button>
		</div>
	</div>
</div>