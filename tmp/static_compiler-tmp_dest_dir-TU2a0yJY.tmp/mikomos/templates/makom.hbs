<div class="container">
<div class="row">
	<div class="col-md-8 col-xs-12">
		<h1>{{title}} {{#each categories}}<span class="flaticon flaticon-{{this}} flaticon-1x"></span> {{/each}}</h1>
	</div>
	<div class="col-md-4 col-xs-12">
		<div class="addthis_sharing_toolbox"></div>
	</div>
</div>
<div class="row">
	<div class="col-md-6 col-xs-12">
		<h3>{{address}}<br>{{city}}, {{state}} {{zip}}</h3>
		<h4>{{phone}}</h4>
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<p>
			<a class="" {{bind-attr href=web_page}} target="_blank">Visit Website</a>
		</p>
		<hr>
		{{#if basic_description}}
			<h4>Description:</h4>
				<ul>
					<li>{{basic_description}}</li>
				</ul>
		{{/if}}
		{{#if tips}}
		<hr>
			<h4>Things to know:</h4>
				<ul>
				{{#each tips}}
					<li>{{this}}</li>
				{{/each}}
				</ul>
		{{/if}}
		</div>
	</div>
</div>