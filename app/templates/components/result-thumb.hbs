{{#with model}}
	{{#link-to 'makom' id tagName="a" classNames="list-group-item"}}
		<div class="row">
			<div class="col-xs-2">
					{{#each category in categories}}
						<span class="flaticon flaticon-{{category}} flaticon-3x"></span>
					{{/each}}
			</div>
			<div class="col-xs-10">
				<h4 class="list-group-item-heading">{{title}}</h4>
				<p class="list-group-item-text">
					<p>
						<small><i class="flaticon flaticon-placemark"></i> {{city}}, {{state}} {{country}}</small>
					</p>
					<p class="text-summary">
						{{basic_description}}
					</p>
				</p>
			</div>
		</div>
	{{/link-to}}
{{/with}}